@{
    <h1>Send new message</h1>
    <form id="addMessageForm" method="post">
        <div>
            <label>To:</label>
            <select name="receiver">
                <option value="martha_amelka">Martha, Amelka's Mother</option>
                <option value="daria_tommy">Daria, Tommy's Mother</option>
            </select>
        </div>
        <div>
            <label>Subject</label>
            <input type="text" name="subject" />
        </div>
        <div><label>Message</label><textarea rows="10" name="message"></textarea></div>
        <input type="submit" value="Send" />
    </form>
    
}
