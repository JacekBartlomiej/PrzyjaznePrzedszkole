@{
    ViewBag.Title = "Home Page";
    ViewBag.Menu = "Menu";
    ViewBag.LoggedIn = "Logged In";
    ViewBag.LogOut = "Log Out";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initail-scale=1, maximum-scale:1">
    <title>Przyjazne Przedszkole: @ViewBag.Title</title>

    <link href="https://fonts.googleapis.com/css?family=Lato:300,700" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" >

    <link href="~/css/styles.css" rel="stylesheet" />

</head>
<body>
    <header>
        <div class="upper-bar">
            <div class="logo">
                <div>Friendly</div>
                <div>Kindergarten</div>
            </div>
            <div class="login-info">
                <span>@ViewBag.LoggedIn: Dorota</span>
                <span><a href="#">@ViewBag.LogOut</a></span>
            </div>
            <nav id="myTopnav" class="topnav">
                <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                    <i class="fa fa-bars"></i>
                </a>
                <ul>
                    <li><a asp-controller="App" asp-action="Index">Home</a></li>
                    <li><a asp-controller="App" asp-action="NoticeBoard">Notice Board</a></li>
                    <li><a asp-controller="App" asp-action="Messages">Messages</a></li>
                    <li><a asp-controller="App" asp-action="Photos">Photos</a></li>
                    <li><a asp-controller="App" asp-action="ParentsData">Parents Data</a></li>
                </ul>
            </nav>

        </div>
    </header>
    <section>
        <main>
            @RenderBody()
        </main>
    </section>
    <footer></footer>
    <script src="~/js/script.js"></script>
</body>

</html>